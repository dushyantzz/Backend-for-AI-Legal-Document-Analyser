# Database Configuration
DATABASE_HOST=localhost
DATABASE_NAME=docbuddy
DATABASE_USER=postgres
PASSWORD=postgres
DATABASE_PORT=5432

# Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Twilio Configuration (for SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AI Model Configuration
SENTENCE_TRANSFORMER_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Notification Settings
DEFAULT_NOTIFICATION_DAYS_BEFORE=7
MAX_NOTIFICATIONS_PER_DAY=10

# GST/Compliance Settings
GST_FILING_DEADLINES={"monthly": 20, "quarterly": 20, "annual": 31}

# Supported Languages
SUPPORTED_LANGUAGES=["en", "hi", "bn", "te", "mr", "ta", "ur", "gu", "kn", "ml", "pa", "or"]
DEFAULT_LANGUAGE=en,hi
